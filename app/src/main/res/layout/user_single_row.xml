<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:elevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingTop="60dp"
        android:paddingStart="10dp"


        tools:ignore="RtlSymmetry">









        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="12dp"
            android:layout_marginTop="28dp"

            android:id="@+id/imageView"
            app:cardCornerRadius="1000dp"
            android:layout_alignParentStart="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="150dp"
                android:layout_width="match_parent"
                android:id="@+id/profileImage"
                app:civ_border_width="2dp"
                app:civ_border_color="#7190EE"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                >
            </de.hdodenhof.circleimageview.CircleImageView>





        </androidx.cardview.widget.CardView>







        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"

            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-0dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_alignTop="@id/imageView"
            android:text="@string/wordsmith"/>


        <TextView
            android:id="@+id/shortBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:paddingStart="8dp"
            android:layout_marginStart="-3dp"
            android:paddingEnd="8dp"
            android:maxLines="7"
            android:layout_marginTop="10dp"

            android:textAlignment="center"

            android:textColor="#655E72"
            android:layout_toEndOf="@id/imageView"
            android:layout_below="@id/textView1"
            android:text=""/>





        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/shortBio"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginTop="34dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/imageView"
            android:text=""/>

        <TextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_toStartOf="@id/shortBio"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@id/name"
            android:text=""/>
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toStartOf="@id/shortBio"
            android:layout_below="@id/branch"
            android:text=""/>

        <LinearLayout
            android:id="@+id/popu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/branch"
            android:layout_below="@id/shortBio"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/like"
                android:layout_width="80dp"
                app:lottie_autoPlay="false"
                android:layout_marginTop="8dp"
                app:lottie_rawRes="@raw/likes"
                app:lottie_loop="false"
                android:visibility="visible"
                app:lottie_speed="1"
                android:layout_height="80dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPopular"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:paddingStart="30dp"
                    android:layout_marginTop="@dimen/margin_20_dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FED32B"
                    />

                <TextView
                    android:id="@+id/pop"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:text="@string/popularity"
                    android:textColor="@color/black"
                    android:paddingStart="4dp"
                    android:layout_marginTop="@dimen/margin_10_dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />



            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>
    <TextView
        android:id="@+id/college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/blue_active"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/crown"
        android:layout_width="80dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="1"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:layout_alignTop="@id/profileImage"
        android:layout_marginEnd="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"

        />





</androidx.cardview.widget.CardView>