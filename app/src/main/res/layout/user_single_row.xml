<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#04365F"
    android:backgroundTint="#04365F"
    android:layout_marginTop="5dp"
    android:elevation="15dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"

        />





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="10dp"


        >









        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="12dp"
            android:layout_marginTop="28dp"
            android:id="@+id/imageView"
            app:cardCornerRadius="1000dp"
            android:layout_alignParentStart="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="150dp"
                android:layout_width="match_parent"
                android:id="@+id/profileImage"
                app:civ_border_width="2dp"
                app:civ_border_color="#7190EE"
                android:src="@drawable/img"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                >
            </de.hdodenhof.circleimageview.CircleImageView>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifLove"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/gifloves"/>

        </androidx.cardview.widget.CardView>




        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#2384F5"

            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-10dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_alignTop="@id/imageView"
            android:text="wordsmith"/>


        <TextView
            android:id="@+id/shortBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:paddingStart="8dp"
            android:layout_marginStart="-3dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="17dp"
            android:textStyle="bold"
            android:fontFamily="@font/futura_medium"
            android:textAlignment="center"

            android:textColor="#A6D7FF"
            android:layout_toEndOf="@id/imageView"
            android:layout_below="@id/textView1"
            android:text="gsuyguxyfafucsxauxcscxcxsuafufs"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/crown"
            android:layout_width="60dp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/vip"
            app:lottie_loop="true"
            app:lottie_speed="1"
            android:layout_height="60dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_alignTop="@id/imageView"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-25dp"
            />



        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/shortBio"
            android:textColor="#ffbf24"
            android:layout_marginBottom="4dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/imageView"
            android:text=""/>

        <TextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="#ffbf24"
            android:layout_toStartOf="@id/shortBio"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@id/name"
            android:text=""/>
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffbf24"
            android:layout_toStartOf="@id/shortBio"
            android:layout_below="@id/branch"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/branch"
            android:layout_below="@id/shortBio"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/like"
                android:layout_width="80dp"
                app:lottie_autoPlay="false"
                app:lottie_rawRes="@raw/likes"
                app:lottie_loop="false"
                android:visibility="visible"
                app:lottie_speed="1"
                android:layout_height="80dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPopular"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:text="4"
                    android:paddingStart="30dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#ffbf24"
                    />

                <TextView
                    android:id="@+id/pop"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Popularity"

                    android:textSize="15sp"
                    android:textStyle="bold"
                    />



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>





</androidx.cardview.widget.CardView>