<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfileActivity"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qiscus_white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bt_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:padding="6dp"
                        android:src="@drawable/ic_back"
                        android:contentDescription="@string/todo" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/profiles"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/qiscus_primary_text" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:contentDescription="@string/todo"
                        android:id="@+id/bt_back2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:padding="6dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_back" />

                </FrameLayout>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:ignore="UselessParent">

            <com.github.sshadkany.shapes.CircleView
                android:layout_width="225dp"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:id="@+id/ivAvatar"
                    android:contentDescription="@string/todo"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:scaleType="centerCrop"
                    android:padding="20dp"
                     />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:scaleType="centerCrop"
                    android:padding="20dp"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/progress"
                    android:paddingTop="15dp"
                    app:lottie_loop="true"
                    app:lottie_speed="1"
                     />




            </com.github.sshadkany.shapes.CircleView>
            <ImageView
                android:id="@+id/ivEditProfile"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="150dp"
                android:contentDescription="@string/todo"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                app:srcCompat="@drawable/baseline_add_a_photo_24"
                android:focusable="true" />

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/userId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textIsSelectable="true"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text=""
            android:textColor="@color/lose_red_bg" />


    </LinearLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/information" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/qiscus_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp">
                    <LinearLayout
                        android:id="@+id/llnametv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="30dp"
                            android:contentDescription="@string/todo"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_profile" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/qiscus_primary_text" />


                        <ImageView
                            android:id="@+id/ivEditInfo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            app:srcCompat="@drawable/baseline_edit_24"
                            android:focusable="true"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llnameet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:contentDescription="@string/todo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_profile" />

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="15sp"
                            android:background="@drawable/edittextback"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/qiscus_primary_text"
                            android:autofillHints=""
                            android:inputType="text"
                            tools:ignore="LabelFor" />



                    </LinearLayout>




                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/lllocationtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/qiscus_white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp">

                        <ImageView
                            android:id="@+id/imageView82"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/todo"
                            app:srcCompat="@drawable/ic_dept" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/qiscus_primary_text" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lllocationet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/qiscus_white"
                        android:gravity="center"

                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_dept"
                            android:contentDescription="@string/todo" />

                        <EditText
                            android:id="@+id/etLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="15sp"
                            android:background="@drawable/edittextback"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/qiscus_primary_text"
                            android:autofillHints=""
                            android:inputType="text"
                            tools:ignore="LabelFor" />

                    </LinearLayout>





                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llyeartv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/qiscus_white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp">

                        <ImageView
                            android:id="@+id/imageView83"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/todo"

                            app:srcCompat="@drawable/ic_study" />

                        <TextView
                            android:id="@+id/tvYear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/qiscus_primary_text" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llyearet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/qiscus_white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp">

                        <ImageView
                            android:contentDescription="@string/todo"
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_study" />

                        <EditText
                            android:id="@+id/etYear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="15sp"
                            android:background="@drawable/edittextback"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/qiscus_primary_text"
                            android:autofillHints=""
                            android:inputType="text"
                            tools:ignore="LabelFor" />

                    </LinearLayout>






                </RelativeLayout>









            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/short_details" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/qiscus_white"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:focusable="true">

                    <LinearLayout
                        android:id="@+id/llshortbiotv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_logout"
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/todo"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_detail" />

                        <TextView
                            android:id="@+id/tvShortBio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/qiscus_primary_text" />
                        <ImageView
                            android:id="@+id/ivEditShortDet"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:contentDescription="@string/todo"
                            app:srcCompat="@drawable/baseline_edit_24"
                            android:focusable="true" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llshortbioet"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:contentDescription="@string/todo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_detail" />

                        <EditText
                            android:id="@+id/etShortBio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:background="@drawable/edittextback"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:text=""
                            android:autofillHints=""
                            android:inputType="text"
                            android:textColor="@color/qiscus_primary_text"
                            tools:ignore="LabelFor" />


                    </LinearLayout>

                </RelativeLayout>

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/btnSaveChanges"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawablePadding="8dp"
                    android:text="@string/save_changes"
                    android:textColor="#8246D6"
                    android:paddingTop="10dp"
                    android:textSize="20sp"


                    />


            </LinearLayout>



        </LinearLayout>

    </ScrollView>




</LinearLayout>