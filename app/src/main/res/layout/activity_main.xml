<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"
    tools:context=".MainActivity">


    <com.mxn.soul.flowingdrawer_core.FlowingDrawer
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:edPosition="1"
        app:edMenuSize="260dp"
        app:edMenuBackground="#dddddd">

        <!--content-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:background="#FC896A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/iv_Menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_menu_24"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Friendship"
                        android:layout_marginHorizontal="16dp"

                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />


                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:id="@+id/fragmentContainer"
                android:layout_above="@+id/bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <!--menu-->
        <com.mxn.soul.flowingdrawer_core.FlowingMenuLayout
            android:id="@+id/menulayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="230dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/colorAccent"/>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:src="@drawable/icon" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Quick tool"
                                android:fontFamily="@font/bariol_bold"
                                android:textColor="@color/white"
                                android:textSize="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivDrawer"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="#090101"


                                android:layout_marginLeft="5dp"
                                android:layout_alignParentLeft="true"/>
                            <TextView
                                android:id="@+id/drawerName"
                                android:fontFamily="@font/bariol_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Vishwajeet Kumar"
                                android:textColor="#FFF1F1"
                                android:textSize="25sp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="24dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text=""
                            android:fontFamily="@font/bariol_regular"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_marginLeft="5dp"/>
                        <TextView
                            android:id="@+id/year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bariol_regular"
                            android:gravity="start"
                            android:layout_marginBottom="10dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginHorizontal="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/top"
                    android:orientation="vertical"
                    android:id="@+id/Header">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfile"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:layout_marginTop="2dp">
                        <LinearLayout
                            android:id="@+id/llhome2"


                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"


                            >
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/account_avatar_profile_png_photo"
                                android:layout_marginLeft="2dp"
                                app:tint="#495154" />
                            <TextView
                                android:layout_marginHorizontal="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile >"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>




                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:layout_marginTop="2dp">

                        <LinearLayout
                            android:id="@+id/llhome3"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"


                            >
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/communication_icon_png_16"
                                android:layout_marginLeft="2dp"

                                app:tint="#495154" />
                            <TextView
                                android:layout_marginHorizontal="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Communicate >"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>




                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:layout_marginTop="2dp">
                        <LinearLayout
                            android:id="@+id/llhome4"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"


                            >
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/privacy_protect_security_icon_1320190884998801875"
                                android:layout_marginLeft="2dp"
                                app:tint="#495154"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:layout_marginHorizontal="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Privacy and Security >"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>




                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:layout_marginTop="2dp">
                        <LinearLayout
                            android:id="@+id/llhome5"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"


                            >
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/_63350_vector_pic_help_free_download_png_hq"
                                android:layout_marginLeft="2dp"
                                app:tint="#495154" />
                            <TextView
                                android:layout_marginHorizontal="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Help >"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>




                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:layout_marginTop="2dp">
                        <LinearLayout
                            android:id="@+id/llhome6"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"


                            >
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/communication_icon_png_16"
                                android:layout_marginLeft="2dp"
                                app:tint="#495154" />
                            <TextView
                                android:layout_marginHorizontal="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About us >"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>




                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>





            </RelativeLayout>

        </com.mxn.soul.flowingdrawer_core.FlowingMenuLayout>

    </com.mxn.soul.flowingdrawer_core.FlowingDrawer>









    <com.wwdablu.soumya.lottiebottomnav.LottieBottomNav
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:menu_selected_height="48dp"
        app:menu_selected_width="48dp"
        app:menu_text_show_on_unselected="true"
        app:menu_unselected_height="40dp"
        app:menu_unselected_width="40dp" />

</RelativeLayout>