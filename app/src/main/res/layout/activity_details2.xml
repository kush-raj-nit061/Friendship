<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicDetails.DetailsActivity2"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6D7FF"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A6D7FF"
            android:layout_marginTop="-15dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#A6D7FF"
                android:id="@+id/froglayout"

                >



                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"
                    android:contentDescription="@string/imageAccess" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"

                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"

                    android:contentDescription="@string/imageAccess" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"
                    android:layout_weight="1"
                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"


                    android:contentDescription="@string/imageAccess" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"
                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"


                    android:layout_weight="1"

                    android:contentDescription="@string/imageAccess" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/bariol_regular"
                    android:text="@string/you_are_3_steps_away"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/skipp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/skip"
                    android:textSize="28sp"/>

                <ImageView
                    android:id="@+id/tvSkip"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"

                    android:fontFamily="@font/coffeesugar"

                    android:src="@drawable/skip"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:contentDescription="@string/todo" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingLeft="@dimen/horizontal_dashboard"
                android:paddingTop="@dimen/fab_margin"
                android:paddingRight="@dimen/horizontal_dashboard"


                android:weightSum="100">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/announcement"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="60"
                    android:contentDescription="@string/imageAccess" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="40"
                    android:fontFamily="@font/bariol_bold"
                    android:text="@string/let_s_celebrate_your_birthday_on"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/normalPadding"
                android:layout_marginRight="@dimen/horizontal_dashboard">
                <TextView
                    android:id="@+id/etCal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    android:inputType="textCapSentences|textMultiLine"
                    android:autofillHints="username"
                    android:drawablePadding="@dimen/drawable_left"
                    android:fontFamily="@font/bariol_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/dd_feb_yyyy"
                    android:background="@drawable/container_search"
                    android:backgroundTint="#7A4D4D4D"
                    android:paddingLeft="@dimen/normalPadding"
                    android:paddingTop="@dimen/vertical_search"
                    android:paddingRight="@dimen/normalPadding"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/vertical_search"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textColorHint="@color/black_transparent"
                    android:textSize="22sp"
                    tools:ignore="TextViewEdits" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_height="44dp"
                    android:background="@drawable/container_search"
                    android:id="@+id/calender"
                    android:src="@drawable/baseline_edit_calendar_24"
                    android:contentDescription="@string/todo" />



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="@string/can_yoy_tell_me_about_your_birth_place"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/etBirthPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:singleLine="false"
                android:inputType="textCapSentences|textMultiLine"

                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:autofillHints="username"
                android:minLines="3"

                android:drawablePadding="@dimen/drawable_left"

                android:fontFamily="@font/bariol_regular"
                android:gravity="center_vertical"
                android:hint="@string/_7th_street_ndelhi_n100005"
                android:background="@drawable/container_search"
                android:paddingLeft="@dimen/normalPadding"
                android:paddingTop="@dimen/vertical_search"
                android:paddingRight="@dimen/normalPadding"
                android:textStyle="bold"

                android:paddingBottom="@dimen/vertical_search"

                android:textColor="?attr/colorPrimaryDark"

                android:textColorHint="#8AA29B9B"
                android:textSize="22sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:paddingHorizontal="30dp"
                tools:ignore="RtlHardcoded">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">



                    <ImageView
                        android:id="@+id/tvNext"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next"
                        android:contentDescription="@string/todo" />


                </RelativeLayout>



            </LinearLayout>











        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>