<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicDetails.DetailsActivity2"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffba60"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffba60"
            android:layout_marginTop="-15dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#ffba60"
                android:id="@+id/froglayout"

                >



                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"
                    android:contentDescription="@string/imageAccess" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"

                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"

                    android:contentDescription="@string/imageAccess" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"
                    android:layout_weight="1"
                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"


                    android:contentDescription="@string/imageAccess" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"
                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"


                    android:layout_weight="1"

                    android:contentDescription="@string/imageAccess" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/bariol_regular"
                android:text="You are 3 steps away"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingLeft="@dimen/horizontal_dashboard"
                android:paddingTop="@dimen/fab_margin"
                android:paddingRight="@dimen/horizontal_dashboard"


                android:weightSum="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="40"
                    android:fontFamily="@font/bariol_bold"
                    android:text="Let's celebrate your birthday on:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:src="@drawable/refer_icon"
                    android:contentDescription="@string/imageAccess" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/normalPadding"
                android:layout_marginRight="@dimen/horizontal_dashboard">
                <EditText
                    android:id="@+id/etCal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    android:inputType="textCapSentences|textMultiLine"
                    android:autofillHints="username"
                    android:drawablePadding="@dimen/drawable_left"
                    android:fontFamily="@font/bariol_regular"
                    android:gravity="center_vertical"
                    android:hint="DD Feb YYYY"
                    android:background="@drawable/container_search"
                    android:paddingLeft="@dimen/normalPadding"
                    android:paddingTop="@dimen/vertical_search"
                    android:paddingRight="@dimen/normalPadding"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/vertical_search"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textColorHint="@color/color_hint"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_height="44dp"
                    android:background="@drawable/container_search"
                    android:id="@+id/calender"
                    android:src="@drawable/baseline_edit_calendar_24"/>



            </LinearLayout>






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="Can yoy tell me about your Birth Place:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/etBirthPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:singleLine="false"
                android:inputType="textCapSentences|textMultiLine"

                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:autofillHints="username"
                android:minLines="3"

                android:drawablePadding="@dimen/drawable_left"

                android:fontFamily="@font/bariol_regular"
                android:gravity="center_vertical"
                android:hint="7th Street,\nDelhi,\n100005"
                android:background="@drawable/container_search"
                android:paddingLeft="@dimen/normalPadding"
                android:paddingTop="@dimen/vertical_search"
                android:paddingRight="@dimen/normalPadding"
                android:textStyle="bold"

                android:paddingBottom="@dimen/vertical_search"

                android:textColor="?attr/colorPrimaryDark"

                android:textColorHint="@color/color_hint"
                android:textSize="22sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/froglayout"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginBottom="10dp"
                android:background="#ffba60"
                android:layout_toEndOf="@+id/froglayout">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/tvPrevious"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/previous"
                    app:lottie_loop="true"
                    app:lottie_speed="1"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/tvNext"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/next"
                    app:lottie_loop="true"
                    app:lottie_speed="1"/>

            </LinearLayout>











        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>