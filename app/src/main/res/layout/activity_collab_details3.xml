<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicDetails.DetailsActivity2"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6D7FF"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A6D7FF"
            android:layout_marginTop="-15dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#A6D7FF"
                android:id="@+id/froglayout"

                >



                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"
                    android:contentDescription="@string/imageAccess" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"

                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"

                    android:contentDescription="@string/imageAccess" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"
                    android:layout_weight="1"
                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"


                    android:contentDescription="@string/imageAccess" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/bariol_regular"
                android:text="You Are At last Step to Share Collaboration Details:"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/bariol_regular"
                android:text="Add Image to frame>\n(3:4)recommended"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />






            <androidx.cardview.widget.CardView
                android:id="@+id/carV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop" />
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/progress"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:scaleType="centerCrop"
                        android:layout_centerInParent="true"
                        android:padding="20dp"
                        android:visibility="gone"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/progress"
                        android:paddingTop="15dp"
                        app:lottie_loop="true"
                        app:lottie_speed="1"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:paddingHorizontal="30dp"
                tools:ignore="RtlHardcoded">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/tvprevious"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:src="@drawable/prev"
                        android:contentDescription="@string/todo" />

                    <ImageView
                        android:id="@+id/tvNext"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next"
                        android:contentDescription="@string/todo" />


                </RelativeLayout>



            </LinearLayout>











        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>