<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserDescrFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/imagegholder"
                    android:layout_marginTop="40dp"
                    android:layout_width="240dp"
                    android:layout_height="228dp"
                    android:src="@color/common_google_signin_btn_text_dark_disabled"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/nameholder"
                    android:text="Candidate Name"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/branchholder"
                    android:text="Branch"
                    android:textSize="25sp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/yearholder"
                    android:text="Year"
                    android:textSize="25sp"
                    android:textColor="#000"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="15dp"
                android:background="@color/colorWhiteSmoke"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhiteSmoke"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About them"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#622a0f"/>

                    <TextView
                        android:id="@+id/shortbioholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I am a disco dancer uuu"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textColor="#622a0f"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All Details"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#622a0f"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HOBBIES:"
                                android:id="@+id/hobbies"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#622a0f"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="chess"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/hobbies"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#5D1D6B"/>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            >



                        </RelativeLayout>




                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/connected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Details"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#622a0f"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Birthday:"
                                android:id="@+id/birthday"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#622a0f"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="05/12/2004"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/birthday"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#5D1D6B"/>


                        </RelativeLayout>









                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favourites"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#622a0f"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qualities like: "
                                android:id="@+id/qualiylike"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#622a0f"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/qualiylike"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#5D1D6B"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quality dislike:"
                                android:id="@+id/qualitydislike"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#622a0f"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/qualitydislike"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#5D1D6B"/>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Foods:"
                                android:id="@+id/foods"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#622a0f"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="05/12/2004"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/foods"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#5D1D6B"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Books:"
                                android:id="@+id/books"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#622a0f"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="05/12/2004"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/books"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#5D1D6B"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Travelling Place:"
                                android:id="@+id/travelling"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#622a0f"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="05/12/2004"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/travelling"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:textColor="#5D1D6B"/>


                        </RelativeLayout>









                    </LinearLayout>





                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>



    </FrameLayout>
</androidx.core.widget.NestedScrollView>