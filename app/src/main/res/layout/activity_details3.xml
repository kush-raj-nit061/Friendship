<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicDetails.DetailsActivity3"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6D7FF"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A6D7FF"
            android:layout_marginTop="-15dp"
            android:orientation="vertical"
            >




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/bariol_regular"
                    android:text="@string/you_are_2_steps_away"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/skip"
                    android:textSize="28sp"/>

                <ImageView
                    android:id="@+id/tvSkip"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/coffeesugar"
                    android:src="@drawable/skip"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:contentDescription="@string/todo" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingLeft="@dimen/horizontal_dashboard"
                android:paddingTop="@dimen/fab_margin"
                android:paddingRight="@dimen/horizontal_dashboard"


                android:weightSum="100">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/announcement"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="60"
                    android:contentDescription="@string/imageAccess" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="40"
                    android:fontFamily="@font/bariol_bold"
                    android:text="@string/select_type_of_books_that_you_like"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/normalPadding"

                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip1"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/novels"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip2"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/poetry"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip3"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/biography"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip4"
                    android:layout_weight="0.8"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/fiction"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip5"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/nonfiction"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip6"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/horrror"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip7"
                    android:layout_weight="0.9"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/mystery"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip8"
                    android:layout_weight="1.3"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/autobiography"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip9"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/comics"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip10"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/historical_fiction"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip11"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/science_fiction"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="@string/what_do_you_normally_like"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="29dp"
                    android:fontFamily="@font/bariol_bold"
                    android:background="@drawable/container_search"
                    android:paddingLeft="@dimen/normalPadding"
                    android:paddingTop="@dimen/vertical_search"
                    android:paddingBottom="@dimen/vertical_search"
                    android:paddingRight="@dimen/normalPadding"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"
                    android:contentDescription="@string/todo" />




            </RelativeLayout>








            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="@string/type_of_place_you_like_to_travel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/normalPadding"

                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip1p"
                    android:layout_weight="0.88"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/beaches"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip2p"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/mountains"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip3p"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/heritage"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip4p"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/historical"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip5p"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/adventure"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip6p"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/wildlife"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip7p"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/educational"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip8p"
                    android:layout_weight="0.8"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/caves"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip9p"
                    android:checkable="true"
                    android:layout_marginEnd="2dp"
                    android:text="@string/unexplored"/>


            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="20dp"
                tools:ignore="RtlHardcoded">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/margin_20_dp"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/tvPrevious"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:src="@drawable/prev"
                        android:contentDescription="@string/todo" />

                    <ImageView
                        android:id="@+id/tvNext"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/next"
                        android:contentDescription="@string/todo" />


                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>