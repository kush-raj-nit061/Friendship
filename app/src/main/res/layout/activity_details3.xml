<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicDetails.DetailsActivity3"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffba60"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffba60"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/coffeesugar"
                android:gravity="right"
                android:text="Skip>>>"
                android:layout_gravity="right"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/bariol_regular"
                android:text="You are 1 steps away"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingLeft="@dimen/horizontal_dashboard"
                android:paddingTop="@dimen/fab_margin"
                android:paddingRight="@dimen/horizontal_dashboard"


                android:weightSum="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="40"
                    android:fontFamily="@font/bariol_bold"
                    android:text="Select Type of Books that you like:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:src="@drawable/refer_icon"
                    android:contentDescription="@string/imageAccess" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/normalPadding"

                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip1"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Novels"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip2"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Poetry"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip3"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Biography"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip4"
                    android:layout_weight="0.8"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Fiction"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip5"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="NonFiction"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip6"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Horrror"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip7"
                    android:layout_weight="0.9"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Mystery"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip8"
                    android:layout_weight="1.3"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="AutoBiography"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip9"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Comics"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip10"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Historical Fiction"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip11"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Science Fiction"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="What do you normally like:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="29dp"
                    android:fontFamily="@font/bariol_bold"
                    android:background="@drawable/container_search"
                    android:paddingLeft="@dimen/normalPadding"
                    android:paddingTop="@dimen/vertical_search"
                    android:paddingBottom="@dimen/vertical_search"
                    android:paddingRight="@dimen/normalPadding"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"/>




            </RelativeLayout>








            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="Type of place you like to travel:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/normalPadding"

                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip1p"
                    android:layout_weight="0.88"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Beaches"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip2p"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Mountains"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip3p"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Heritage"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip4p"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Historical"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip5p"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Adventure"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip6p"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Wildlife"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip7p"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Educational"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip8p"
                    android:layout_weight="0.8"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Caves"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip9p"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Unexplored"/>


            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/fab_margin"

                    >



                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/fab_margin"
                    android:id="@+id/froglayout"

                    >



                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/frog1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:scaleType="centerCrop"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/frog2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:scaleType="centerCrop"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/frog3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"

                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />


                </LinearLayout>







            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/froglayout"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginBottom="10dp"
                android:background="#FFF8B858"
                android:layout_toEndOf="@+id/froglayout">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/tvNext"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="-25dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/purple_700"
                    android:fontFamily="@font/poppins"

                    android:gravity="end"
                    android:src="@drawable/next"

                    />

            </LinearLayout>











        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>