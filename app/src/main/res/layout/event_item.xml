<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="3dp"

    android:orientation="vertical"
    android:id="@+id/constraint_layout">

    <com.zyp.cardview.YcCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/padding_50_dp"
        app:ycCardCornerRadius="@dimen/margin_10_dp"
        app:ycCardBackgroundColor="@color/white"
        android:elevation="@dimen/margin_10_dp"
        android:background="@drawable/bg_card_explore_3_inside">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.wajahatkarim3.easyflipview.EasyFlipView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flipOnTouch="true"
                app:flipEnabled="true"
                app:flipDuration="400"
                app:flipFrom="right"
                app:flipType="horizontal"
                app:autoFlipBack="false"
                >

                <!-- Back Layout Goes Here -->
                <include layout="@layout/event_back"/>

                <!-- Front Layout Goes Here -->
                <include layout="@layout/event_front"/>

            </com.wajahatkarim3.easyflipview.EasyFlipView>

            <TextView
                android:id="@+id/link1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.google.com"
                android:autoLink="web"
                android:visibility="invisible"
                android:minWidth="300dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:maxLines="1"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:linksClickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.google.com"
                android:autoLink="web"
                android:visibility="invisible"
                android:minWidth="300dp"
                android:id="@+id/link2"
                android:maxLines="1"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:linksClickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.google.com"
                android:autoLink="web"
                android:id="@+id/link3"
                android:maxLines="1"
                android:visibility="invisible"
                android:minWidth="300dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:linksClickable="true"/>



        </LinearLayout>



    </com.zyp.cardview.YcCardView>

</LinearLayout>