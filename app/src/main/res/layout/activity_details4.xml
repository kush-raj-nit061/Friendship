<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicDetails.DetailsActivity4"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffba60"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffba60"
            android:layout_marginTop="-15dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#ffba60"
                android:id="@+id/froglayout"

                >



                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"
                    android:contentDescription="@string/imageAccess" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"

                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"

                    android:contentDescription="@string/imageAccess" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"
                    android:layout_weight="1"
                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"


                    android:contentDescription="@string/imageAccess" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"
                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"


                    android:layout_weight="1"

                    android:contentDescription="@string/imageAccess" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/bariol_regular"
                android:text="You are At last Step to setup your profile"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingLeft="@dimen/horizontal_dashboard"
                android:paddingTop="@dimen/fab_margin"
                android:paddingRight="@dimen/horizontal_dashboard"


                android:weightSum="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="40"
                    android:fontFamily="@font/bariol_bold"
                    android:text="What Qualities do you like in person:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:src="@drawable/refer_icon"
                    android:contentDescription="@string/imageAccess" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/normalPadding"

                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip1"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Charming"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip2"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Calm"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip3"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Honesty"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip4"
                    android:layout_weight="0.8"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Confidence"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip5"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Friendly"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip6"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Social"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip7"
                    android:layout_weight="0.6"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Loyal"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip8"
                    android:layout_weight="0.5"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Kind"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip9"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Hard Working"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip10"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Passionate"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip11"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Beautiful"/>


            </LinearLayout>

            <EditText
                android:id="@+id/etHobbies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:singleLine="false"
                android:inputType="textCapSentences|textMultiLine"
                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:autofillHints="username"
                android:drawablePadding="@dimen/drawable_left"
                android:fontFamily="@font/bariol_regular"
                android:gravity="center_vertical"
                android:hint="Other's (if any)"
                android:background="@drawable/container_search"
                android:paddingLeft="@dimen/normalPadding"
                android:paddingTop="@dimen/vertical_search"
                android:paddingRight="@dimen/normalPadding"
                android:textStyle="bold"
                android:paddingBottom="@dimen/vertical_search"
                android:textColor="?attr/colorPrimaryDark"
                android:textColorHint="@color/color_hint"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="What Qualities do you Dislike in person:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/normalPadding"

                android:layout_marginRight="@dimen/horizontal_dashboard">

                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip1d"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="self centered"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip2d"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Negative"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip3d"
                    android:layout_weight="0.8"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Judgemental"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip4d"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Dishonest"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:orientation="horizontal"


                android:layout_marginRight="@dimen/horizontal_dashboard">
                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip5d"
                    android:layout_weight="0.6"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Selfish"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/chip6d"
                    android:checkable="true"
                    android:layout_marginRight="2dp"
                    android:text="Arrogance"/>


            </LinearLayout>

            <EditText
                android:id="@+id/etDislike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:singleLine="false"
                android:inputType="textCapSentences|textMultiLine"
                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:autofillHints="username"
                android:drawablePadding="@dimen/drawable_left"
                android:fontFamily="@font/bariol_regular"
                android:gravity="center_vertical"
                android:hint="Other's (if any)"
                android:layout_marginBottom="5dp"
                android:background="@drawable/container_search"
                android:paddingLeft="@dimen/normalPadding"
                android:paddingTop="@dimen/vertical_search"
                android:paddingRight="@dimen/normalPadding"
                android:textStyle="bold"
                android:paddingBottom="@dimen/vertical_search"
                android:textColor="?attr/colorPrimaryDark"
                android:textColorHint="@color/color_hint"
                android:textSize="22sp" />





















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/froglayout"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginBottom="10dp"
                android:background="#ffba60"
                android:layout_toEndOf="@+id/froglayout">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/tvNext"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/next"
                    app:lottie_loop="true"
                    app:lottie_speed="1"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="-25dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/purple_700"
                    android:fontFamily="@font/poppins"

                    android:gravity="end"


                    />

            </LinearLayout>











        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>