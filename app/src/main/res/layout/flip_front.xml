<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.zyp.cardview.YcCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:ycCardCornerRadius="8dp"
        app:ycCardBackgroundColor="@color/colorAccent"
        app:ycEndShadowColor="#FFEB3B"
        app:ycCardElevation="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">






            <ImageView
                android:id="@+id/purl"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="0dp"
                android:scaleType="centerCrop"
                 />




        </RelativeLayout>








    </com.zyp.cardview.YcCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/decorate_featured"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/decorate_featured"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/decorate_featured"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/decorate_featured"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/decorate_featured"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/decorate_featured"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/decorate_featured"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/decorate_featured"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/decorate_featured"
            android:layout_weight="1"/><ImageView
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:background="@drawable/decorate_featured"
        android:layout_weight="1"/><ImageView
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:background="@drawable/decorate_featured"
        android:layout_weight="1"/><ImageView
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:background="@drawable/decorate_featured"
        android:layout_weight="1"/><ImageView
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:background="@drawable/decorate_featured"
        android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name1"
                android:fontFamily="@font/bariol_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Vishwajeet Kumar"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="24dp"/>


            <TextView
                android:id="@+id/branch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Electrical Engineering"
                android:fontFamily="@font/bariol_regular"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>


        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/medal1"
            android:layout_width="120dp"
            android:layout_marginTop="-25dp"
            android:layout_height="122dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            android:paddingTop="40dp"

            app:lottie_loop="true"
            app:lottie_speed="0.4"/>



    </LinearLayout>









</LinearLayout>