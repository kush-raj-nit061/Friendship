<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:fontFamily="@font/bariol_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Vishwajeet Kumar"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="24dp"/>


            <TextView
                android:id="@+id/branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Electrical Engineering"
                android:fontFamily="@font/bariol_regular"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="3dp"
                android:text="2021-2025"
                android:fontFamily="@font/bariol_regular"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>


        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/medal"
            android:layout_width="120dp"
            android:layout_marginTop="-25dp"
            android:layout_height="122dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            android:paddingTop="40dp"
            app:lottie_rawRes="@raw/third"
            app:lottie_loop="true"
            app:lottie_speed="0.2"/>








    </LinearLayout>


    <TextView
        android:id="@+id/shortBio"
        android:fontFamily="@font/ubuntu_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="@dimen/margin_10_dp"
        android:text="Hello everyone myself vishwajeet kumar from Electrical Enginerring."
        android:textColor="#9B0000"
        android:textSize="20sp"
        android:layout_marginTop="24dp"/>









</LinearLayout>