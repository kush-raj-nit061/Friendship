<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicDetails.DetailsActivity1"
    >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6D7FF"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A6D7FF"
            android:layout_marginTop="-15dp"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/bariol_regular"
                android:text="@string/you_are_4_steps_away_to_setup_your_profile"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingLeft="@dimen/horizontal_dashboard"
                android:paddingTop="@dimen/fab_margin"
                android:paddingRight="@dimen/horizontal_dashboard"


                android:weightSum="100">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/announcement"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="60"
                    android:contentDescription="@string/imageAccess" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="40"
                    android:fontFamily="@font/bariol_bold"
                    android:text="@string/hey_tell_me_something_about_yourself"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />


            </LinearLayout>



            <EditText
                android:id="@+id/etShortDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:singleLine="false"
                android:inputType="textCapSentences|textMultiLine"

                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:autofillHints="username"
                android:minLines="3"

                android:drawablePadding="@dimen/drawable_left"

                android:fontFamily="@font/bariol_regular"
                android:gravity="center_vertical"
                android:hint="@string/write_here"
                android:background="@drawable/container_search"
                android:paddingLeft="@dimen/normalPadding"
                android:paddingTop="@dimen/vertical_search"
                android:paddingRight="@dimen/normalPadding"
                android:textStyle="bold"

                android:paddingBottom="@dimen/vertical_search"

                android:textColor="?attr/colorPrimaryDark"

                android:textColorHint="@color/color_hint"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="@string/hobbies_that_nfascinates_you"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/etHobbies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:singleLine="false"
                android:inputType="textCapSentences|textMultiLine"

                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:autofillHints="username"
                android:minLines="3"

                android:drawablePadding="@dimen/drawable_left"

                android:fontFamily="@font/bariol_regular"
                android:gravity="center_vertical"
                android:hint="@string/write_here"
                android:background="@drawable/container_search"
                android:paddingLeft="@dimen/normalPadding"
                android:paddingTop="@dimen/vertical_search"
                android:paddingRight="@dimen/normalPadding"
                android:textStyle="bold"

                android:paddingBottom="@dimen/vertical_search"

                android:textColor="?attr/colorPrimaryDark"

                android:textColorHint="@color/color_hint"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="@string/you_are_studying_in"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="29dp"
                    android:fontFamily="@font/bariol_bold"
                    android:background="@drawable/container_search"
                    android:paddingLeft="@dimen/normalPadding"
                    android:paddingTop="@dimen/vertical_search"
                    android:paddingBottom="@dimen/vertical_search"
                    android:paddingRight="@dimen/normalPadding"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"
                    android:contentDescription="@string/todo" />




            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_margin="40dp"
                tools:ignore="RtlHardcoded">

                <ImageView
                    android:id="@id/tvNext"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:src="@drawable/next"
                    android:contentDescription="@string/todo" />

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>