<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicDetails.DetailsActivity1"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffba60"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffba60"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/bariol_regular"
                android:text="You are 3 steps away"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingLeft="@dimen/horizontal_dashboard"
                android:paddingTop="@dimen/fab_margin"
                android:paddingRight="@dimen/horizontal_dashboard"


                android:weightSum="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="40"
                    android:fontFamily="@font/bariol_bold"
                    android:text="Hey, Tell Me Something About Yourself"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="60"
                    android:src="@drawable/refer_icon"
                    android:contentDescription="@string/imageAccess" />
            </LinearLayout>



            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:singleLine="false"
                android:inputType="textCapSentences|textMultiLine"

                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:autofillHints="username"
                android:minLines="3"

                android:drawablePadding="@dimen/drawable_left"

                android:fontFamily="@font/bariol_regular"
                android:gravity="center_vertical"
                android:hint="@string/write_here"
                android:background="@drawable/container_search"
                android:paddingLeft="@dimen/normalPadding"
                android:paddingTop="@dimen/vertical_search"
                android:paddingRight="@dimen/normalPadding"
                android:textStyle="bold"

                android:paddingBottom="@dimen/vertical_search"

                android:textColor="?attr/colorPrimaryDark"

                android:textColorHint="@color/color_hint"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="Hobbies that\nfascinates you:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/etHobbies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:singleLine="false"
                android:inputType="textCapSentences|textMultiLine"

                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:autofillHints="username"
                android:minLines="3"

                android:drawablePadding="@dimen/drawable_left"

                android:fontFamily="@font/bariol_regular"
                android:gravity="center_vertical"
                android:hint="@string/write_here"
                android:background="@drawable/container_search"
                android:paddingLeft="@dimen/normalPadding"
                android:paddingTop="@dimen/vertical_search"
                android:paddingRight="@dimen/normalPadding"
                android:textStyle="bold"

                android:paddingBottom="@dimen/vertical_search"

                android:textColor="?attr/colorPrimaryDark"

                android:textColorHint="@color/color_hint"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:layout_marginHorizontal="29dp"
                android:fontFamily="@font/bariol_bold"
                android:text="You are Studying in:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="29dp"
                    android:fontFamily="@font/bariol_bold"
                    android:background="@drawable/container_search"
                    android:paddingLeft="@dimen/normalPadding"
                    android:paddingTop="@dimen/vertical_search"
                    android:paddingBottom="@dimen/vertical_search"
                    android:paddingRight="@dimen/normalPadding"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"/>




            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/fab_margin"

                    >



                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/fab_margin"
                    android:id="@+id/froglayout"

                    >



                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/frog1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:scaleType="centerCrop"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/frog2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:scaleType="centerCrop"

                        android:layout_weight="1"
                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/frog3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"

                        android:src="@drawable/frog"
                        android:contentDescription="@string/imageAccess" />


                </LinearLayout>







            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/froglayout"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginBottom="10dp"
                android:background="#FFF8B858"
                android:layout_toEndOf="@+id/froglayout">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/tvNext"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="-25dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/purple_700"
                    android:fontFamily="@font/poppins"

                    android:gravity="end"
                    android:src="@drawable/next"

                    />

            </LinearLayout>











        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>