<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicDetails.DetailsActivity2"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6D7FF"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A6D7FF"
            android:layout_marginTop="-15dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#A6D7FF"
                android:id="@+id/froglayout"

                >



                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"
                    android:contentDescription="@string/imageAccess" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"

                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"

                    android:layout_weight="1"

                    android:contentDescription="@string/imageAccess" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"
                    android:layout_weight="1"
                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"


                    android:contentDescription="@string/imageAccess" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/frog4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"                    android:visibility="visible"
                    app:lottie_autoPlay="false"
                    app:lottie_rawRes="@raw/frog"
                    app:lottie_loop="true"
                    app:lottie_speed="1"


                    android:layout_weight="1"

                    android:contentDescription="@string/imageAccess" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/bariol_regular"
                android:text="@string/welcome_to"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/bariol_regular"
                android:text="@string/friendship_app"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorBackground"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textSignInLabel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorBackground"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:includeFontPadding="false"
                        android:text="@string/email"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:singleLine="false"

                        android:autofillHints="username"
                        android:maxLines="1"
                        android:drawablePadding="@dimen/drawable_left"
                        android:gravity="center_vertical"
                        android:id="@+id/email"
                        android:fontFamily="@font/ubuntu_regular"
                        android:hint="@string/your_example_com"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorPrimaryText"
                        android:textColorHint="@color/colorHintText"

                        android:background="@drawable/container_search"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/vertical_search"
                        android:paddingRight="@dimen/normalPadding"

                        android:paddingBottom="@dimen/vertical_search"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:includeFontPadding="false"
                        android:text="@string/password"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:singleLine="false"

                        android:autofillHints="username"
                        android:maxLines="1"
                        android:drawablePadding="@dimen/drawable_left"
                        android:gravity="center_vertical"
                        android:id="@+id/password"
                        android:hint="@string/password_hint"
                        android:fontFamily="@font/ubuntu_regular"
                        android:imeOptions="actionDone"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textPassword"
                        android:textColor="@color/colorPrimaryText"
                        android:textColorHint="@color/colorHintText"
                        android:background="@drawable/container_search"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/vertical_search"
                        android:paddingRight="@dimen/normalPadding"

                        android:paddingBottom="@dimen/vertical_search"
                        android:textSize="16sp" />








                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/container_search"
                    android:includeFontPadding="false"
                    android:text="@string/sign_in"
                    android:textColor="@color/colorTextIcons"
                    android:textSize="12sp"
                    />

                <ProgressBar
                    android:id="@+id/progressBarSignIn"
                    android:layout_marginTop="30dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible" />


            </RelativeLayout>



            <TextView
                android:id="@+id/textNoAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ubuntu_regular"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/don_t_have_an_account"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/buttonSignIn" />

            <TextView
                android:id="@+id/textSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="6dp"
                android:text="@string/sign_up"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNoAccount" />












        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>